# Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=audit_trail
DB_USER=audit_user
DB_PASSWORD=your_secure_password
DB_SSL_MODE=prefer

# Connection string format: "Host={DB_HOST};Port={DB_PORT};Database={DB_NAME};Username={DB_USER};Password={DB_PASSWORD};SSL Mode={DB_SSL_MODE}"

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=

# Consumer Group Settings
KAFKA_CONSUMER_GROUP_ID=audit-trail-ingestor
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=false
KAFKA_MAX_POLL_INTERVAL_MS=300000

# Producer Settings
KAFKA_PRODUCER_CLIENT_ID=audit-trail-producer
KAFKA_PRODUCER_ACKS=all
KAFKA_PRODUCER_ENABLE_IDEMPOTENCE=true
KAFKA_PRODUCER_RETRIES=5

# Topic Configuration
KAFKA_TOPIC_ORDERS_CREATED=orders.order.created
KAFKA_TOPIC_ORDERS_UPDATED=orders.order.updated
KAFKA_TOPIC_ORDERS_CANCELLED=orders.order.cancelled
KAFKA_TOPIC_PAYMENTS_PROCESSED=payments.payment.processed
KAFKA_TOPIC_PAYMENTS_FAILED=payments.payment.failed
KAFKA_TOPIC_INVENTORY_UPDATED=inventory.item.updated
KAFKA_TOPIC_SHIPPING_CREATED=shipping.shipment.created
KAFKA_TOPIC_SHIPPING_DELIVERED=shipping.shipment.delivered

# API Configuration
API_PORT=5000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
API_RATE_LIMIT_REQUESTS_PER_HOUR=1000
API_RATE_LIMIT_REPLAY_REQUESTS_PER_HOUR=10

# Authentication Configuration
JWT_SECRET_KEY=your-256-bit-secret-key-change-this-in-production
JWT_ISSUER=audit-trail-api
JWT_AUDIENCE=audit-trail-users
JWT_EXPIRATION_MINUTES=60

# Logging Configuration
LOG_LEVEL=Information
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/audit-trail.log
LOG_FILE_MAX_SIZE_MB=100
LOG_FILE_MAX_FILES=10

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT_SECONDS=30

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this
ENCRYPTION_IV=your-16-char-iv-here

# Performance Configuration
DB_CONNECTION_POOL_MIN_SIZE=5
DB_CONNECTION_POOL_MAX_SIZE=100
DB_COMMAND_TIMEOUT_SECONDS=30
DB_CONNECTION_TIMEOUT_SECONDS=15

# Caching Configuration (Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_SSL_ENABLED=false
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true

# Background Job Configuration
BACKGROUND_JOB_ENABLED=true
BACKGROUND_JOB_INTERVAL_SECONDS=60
CLEANUP_OLD_EVENTS_ENABLED=true
CLEANUP_OLD_EVENTS_RETENTION_DAYS=365

# Development/Testing Configuration
DEVELOPMENT_MODE=true
SEED_TEST_DATA=false
TEST_DATABASE_NAME=audit_trail_test
INTEGRATION_TEST_MODE=false

# Docker Configuration
DOCKER_NETWORK=audit-trail-network
DOCKER_POSTGRES_VOLUME=postgres_data
DOCKER_KAFKA_VOLUME=kafka_data

# Cloud Configuration (AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=audit-trail-backups
AWS_RDS_ENDPOINT=
AWS_MSK_BOOTSTRAP_SERVERS=

# Kubernetes Configuration
K8S_NAMESPACE=audit-trail
K8S_SERVICE_ACCOUNT=audit-trail-service
K8S_CONFIG_MAP=audit-trail-config
K8S_SECRET_NAME=audit-trail-secrets

# Feature Flags
FEATURE_EVENT_REPLAY_ENABLED=true
FEATURE_BATCH_PROCESSING_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AUDIT_LOGGING_ENABLED=true
FEATURE_FIELD_ENCRYPTION_ENABLED=true
